import java.util.*;

public class ShirinLoto {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        boolean playAgain = true;

        System.out.println("ğŸ€ Åirin Loto ğŸ€");
        System.out.println("Ã–dÃ¼l Tablosu:");
        System.out.println("2 sayÄ± â†’ 10â‚º");
        System.out.println("3 sayÄ± â†’ 50â‚º");
        System.out.println("4 sayÄ± â†’ 200â‚º");
        System.out.println("5 sayÄ± â†’ 1000â‚º");

        while (playAgain) {
            // 1ï¸âƒ£ Loto sayÄ±larÄ± oluÅŸtur
            Set<Integer> lotteryNumbers = new HashSet<>();
            while (lotteryNumbers.size() < 5) {
                lotteryNumbers.add(random.nextInt(50) + 1);
            }

            // 2ï¸âƒ£ KullanÄ±cÄ±dan sayÄ± al
            List<Integer> userNumbers = new ArrayList<>();
            System.out.println("\n1-50 arasÄ±nda 5 sayÄ± girin:");
            while (userNumbers.size() < 5) {
                System.out.print("SayÄ± " + (userNumbers.size() + 1) + ": ");
                try {
                    int num = Integer.parseInt(scanner.nextLine());
                    if (num < 1 || num > 50) {
                        System.out.println("LÃ¼tfen 1-50 arasÄ±nda sayÄ± girin!");
                    } else if (userNumbers.contains(num)) {
                        System.out.println("Bu sayÄ±yÄ± zaten girdiniz!");
                    } else {
                        userNumbers.add(num);
                    }
                } catch (NumberFormatException e) {
                    System.out.println("LÃ¼tfen geÃ§erli bir sayÄ± girin!");
                }
            }

            // 3ï¸âƒ£ DoÄŸru tahmin sayÄ±sÄ±nÄ± hesapla
            int correctCount = 0;
            for (int num : userNumbers) {
                if (lotteryNumbers.contains(num)) {
                    correctCount++;
                }
            }

            // 4ï¸âƒ£ Ã–dÃ¼lÃ¼ hesapla
            int prize = switch (correctCount) {
                case 2 -> 10;
                case 3 -> 50;
                case 4 -> 200;
                case 5 -> 1000;
                default -> 0;
            };

            // 5ï¸âƒ£ SonuÃ§larÄ± gÃ¶ster
            System.out.println("\nğŸ‰ SonuÃ§lar ğŸ‰");
            System.out.println("Loto SayÄ±larÄ±: " + lotteryNumbers);
            System.out.println("Sizin SayÄ±larÄ±nÄ±z: " + userNumbers);
            System.out.println("TuttuÄŸunuz SayÄ±: " + correctCount);
            System.out.println("KazandÄ±ÄŸÄ±nÄ±z Para: " + prize + "â‚º");

            // 6ï¸âƒ£ Tekrar oyna
            System.out.print("\nTekrar oynamak ister misiniz? (E/H): ");
            String answer = scanner.nextLine().trim().toUpperCase();
            playAgain = answer.equals("E");
        }

        System.out.println("\nOyun bitti! ğŸ€ TeÅŸekkÃ¼rler!");
        scanner.close();
    }
}
